Private Sub Raise_EVENT_COMBO_SELECT(ByRef FormUID, ByRef pval As SAPbouiCOM.ItemEvent, ByRef BubbleEvent As Boolean)
On Error GoTo Raise_EVENT_COMBO_SELECT_Error
    Dim SBPLID As String
    Dim sCount As Integer
    Dim sSeq As Integer
    Dim i As Integer
    Dim oCombo          As SAPbouiCOM.ComboBox
    Dim sQry            As String
    Dim oRecordSet01      As SAPbobsCOM.Recordset
        
    Set oRecordSet01 = Sbo_Company.GetBusinessObject(BoRecordset)
        
    Call oForm01.Freeze(True)
    If pval.BeforeAction = True Then
    
    ElseIf pval.BeforeAction = False Then
    
        If pval.ItemChanged = True Then
            If pval.ItemUID = "BPLId" Then
                sCount = oForm01.Items("MoldNo").Specific.ValidValues.Count
                sSeq = sCount
                For i = 1 To sCount
                    oForm01.Items("MoldNo").Specific.ValidValues.Remove sSeq - 1, psk_Index
                    sSeq = sSeq - 1
                Next i
                
                '//금형코드
                SBPLID = oForm01.Items("BPLId").Specific.VALUE
                Set oCombo = oForm01.Items("MoldNo").Specific
                sQry = "Select Code = '-', Name = '선택' Union All select Code = a.Code, Name = a.U_Item + ' [' +  U_CallSize + ']' from [@PS_PP190H] a Inner Join [@PS_PP190L] b On a.Code = b.Code "
                sQry = sQry + " Where U_State = 'I' And a.U_ToolType = '3' "
                sQry = sQry + " And Not exists (Select * from [@PS_PP190L] t Where a.Code = t.Code "
                sQry = sQry + " And t.U_State = 'X') And a.U_BPLId = '" + SBPLID + "'"
                
                oRecordSet01.DoQuery sQry
                Do Until oRecordSet01.EOF
                    oCombo.ValidValues.Add Trim(oRecordSet01.Fields(0).VALUE), Trim(oRecordSet01.Fields(1).VALUE)
                    oRecordSet01.MoveNext
                Loop
                
                
            End If
        End If
    End If
    Call oForm01.Freeze(False)
    Exit Sub
Raise_EVENT_COMBO_SELECT_Error:
    Call oForm01.Freeze(False)
    Sbo_Application.SetStatusBarMessage "Raise_EVENT_COMBO_SELECT_Error: " & Err.Number & " - " & Err.Description, bmt_Short, True
End Sub

