Private Sub Raise_EVENT_VALIDATE(ByRef FormUID, ByRef pval As SAPbouiCOM.ItemEvent, ByRef BubbleEvent As Boolean)
On Error GoTo Raise_EVENT_VALIDATE_Error

    Dim Query01 As String
    Dim RecordSet01 As SAPbobsCOM.Recordset
    Set RecordSet01 = Sbo_Company.GetBusinessObject(BoRecordset)

    Call oForm01.Freeze(True)
    If pval.BeforeAction = True Then
        If pval.ItemChanged = True Then
        
            If pval.ItemUID = "Mat01" Then

                If pval.ColUID = "PGCd" Then
                
                    If oMat01.Columns("PGType").Cells(pval.Row).Specific.VALUE = "M" Then '프로그램타입이 주프로그램일 경우
                    
                        Query01 = "           SELECT    T1.U_CdName"
                        Query01 = Query01 & " FROM      [@PS_SY001H] AS T0"
                        Query01 = Query01 & "           INNER JOIN"
                        Query01 = Query01 & "           [@PS_SY001L] AS T1"
                        Query01 = Query01 & "               ON T0.Code = T1.Code"
                        Query01 = Query01 & " WHERE     [dbo].FUNC_Split(T0.Code, '_', 2) = 'M'"
                        Query01 = Query01 & "           AND T1.U_Minor = '" & oMat01.Columns(pval.ColUID).Cells(pval.Row).Specific.VALUE & "'"
                    
                    ElseIf oMat01.Columns("PGType").Cells(pval.Row).Specific.VALUE = "Q" Then '프로그램타입이 질의관리자일 경우
                    
                        Query01 = "           SELECT    T1.QName"
                        Query01 = Query01 & " FROM      OQCN AS T0"
                        Query01 = Query01 & "           INNER JOIN"
                        Query01 = Query01 & "           OUQR AS T1"
                        Query01 = Query01 & "               ON T0.CategoryId = T1.QCategory"
                        Query01 = Query01 & " WHERE     LEFT(T0.CatName, 1) <> 'z'"
                        Query01 = Query01 & "           AND T0.CategoryId <> -2"
                        Query01 = Query01 & "           AND T1.IntrnalKey = '" & oMat01.Columns(pval.ColUID).Cells(pval.Row).Specific.VALUE & "'"
                    
                    End If
                    
                    Call RecordSet01.DoQuery(Query01)

                    oMat01.Columns("PGNm").Cells(pval.Row).Specific.VALUE = Trim(RecordSet01.Fields(0).VALUE)

                End If

            End If
        
            If pval.ItemUID = "RegCd" Then '등록자
            
                Query01 = "SELECT U_FULLNAME FROM OHEM WHERE U_MSTCOD = '" & oForm01.Items(pval.ItemUID).Specific.VALUE & "'"
                Call RecordSet01.DoQuery(Query01)
                oForm01.Items("RegNm").Specific.VALUE = Trim(RecordSet01.Fields(0).VALUE)
                
            ElseIf pval.ItemUID = "ReqCd" Then '요청자
            
                Query01 = "SELECT U_FULLNAME FROM OHEM WHERE U_MSTCOD = '" & oForm01.Items(pval.ItemUID).Specific.VALUE & "'"
                Call RecordSet01.DoQuery(Query01)
                oForm01.Items("ReqNm").Specific.VALUE = Trim(RecordSet01.Fields(0).VALUE)
                
            End If
        
            oForm01.Update
        
'            oForm01.Items(pval.ItemUID).Click ct_Regular
            Call oMat01.AutoResizeColumns
        
        End If
    ElseIf pval.BeforeAction = False Then
        
    End If
    
    Set RecordSet01 = Nothing
    Call oForm01.Freeze(False)
    Exit Sub
Raise_EVENT_VALIDATE_Error:
    Set RecordSet01 = Nothing
    Call oForm01.Freeze(False)
    Sbo_Application.SetStatusBarMessage "Raise_EVENT_VALIDATE_Error: " & Err.Number & " - " & Err.Description, bmt_Short, True
End Sub

