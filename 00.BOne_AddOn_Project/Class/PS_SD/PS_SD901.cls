Private Sub SAVE()
On Error GoTo SAVE_Error
    Dim i&
    Dim ErrNum&
    Dim sQry                    As String
        
    Dim ORDRNo$, ItemCode$
    Dim oRecordSet01            As SAPbobsCOM.Recordset
    
    Set oRecordSet01 = Sbo_Company.GetBusinessObject(BoRecordset)
        
        
    ORDRNo = Trim(oForm01.Items("ORDRNo").Specific.VALUE)
    ItemCode = Trim(oForm01.Items("ItemCode").Specific.VALUE)
    
    
    If Trim(ORDRNo) = "" Then
        ErrNum = 1
        GoTo SAVE_Error
    End If
    
    If Trim(ItemCode) = "" Then
        ErrNum = 2
        GoTo SAVE_Error
    End If
    
    
    '판매오더, 작번 check
    sQry = "SELECT 'X' FROM [ORDR] a Inner Join [RDR1] b On a.DocEntry = b.DocEntry Inner join [OITM]  c On b.ItemCode = c.ItemCode And c.U_ItmBsort In ('105','106') WHERE a.DocEntry = '" & ORDRNo & "' And b.ItemCode = '" & ItemCode & "'"
    oRecordSet01.DoQuery sQry
    
    If oRecordSet01.RecordCount = 0 Then
        ErrNum = 3
        GoTo SAVE_Error
    End If
    
    
    '//조회조건문
    sQry = "EXEC [PS_SD901_01] '" & ORDRNo & "', '" & ItemCode & "'"
    oRecordSet01.DoQuery sQry
'    If oRecordSet01.RecordCount = 0 Then
'        ErrNum = 4
'        GoTo SAVE_Error
'    End If
    
    MDC_Com.MDC_GF_Message "변경처리가 완료되었습니다.", "S"
    Set oRecordSet01 = Nothing
    Exit Sub
'////////////////////////////////////////////////////////////////////////////////////////////////////////////////
SAVE_Error:
    Set oRecordSet01 = Nothing
    If ErrNum = 1 Then
        MDC_Com.MDC_GF_Message "판매오더 번호가 없습니다.  확인해 주세요.", "E"
    ElseIf ErrNum = 2 Then
        MDC_Com.MDC_GF_Message "품목코드(작지)번호가 없습니다.  확인해 주세요.", "E"
    ElseIf ErrNum = 3 Then
        MDC_Com.MDC_GF_Message "판매오더가 없거나 판매오더에 해당작번이 없습니다. 확인바랍니다.", "E"
    ElseIf ErrNum = 4 Then
        MDC_Com.MDC_GF_Message "수주처변경 오류입니다. 확인해 주세요.", "E"
    Else
        MDC_Com.MDC_GF_Message "SAVE_Error:" & Err.Number & " - " & Err.Description, "E"
    End If
End Sub


